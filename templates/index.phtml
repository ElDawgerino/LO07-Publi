<html>
    <head>
        <meta charset="utf-8"/>
        <title>LO07-publi</title>
        <script src="public/libs/angular.min.js"></script>
        <script src="public/libs/angular-ui-router.min.js"></script>
        <script src="public/libs/angular-base64-upload.js"></script>
        <script src="public/auth.js"></script>
        <script src="public/publi.js"></script>
        <script src="public/routes.js"></script>
        <script src="public/app.js"></script>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="public/style.css">
    </head>
    <body ng-app="LO07-publi">
      <div id="contenu">
        <nav ng-controller="NavBar" class="nav">
        <ul>
          <li id="website-main-button">
              <i class="material-icons" style="vertical-align: middle; color: white;">archive</i>
              <button ng-click="goHome()" ng-class="{ active: $state.includes('home') }">LO07-Publi</button>
          </li>
          <li ng-show="loggedIn">
              <button ng-click="goPublish()" ng-class="{ active: $state.includes('publish') }">Publier</button>
          </li>
          <li class="align-righ">
              <button ng-click="goRecherche()" ng-class="{ active: $state.includes('recherche') }">Recherche</button>
          </li>

          <li class="align-right" ng-show="loggedIn">
              <button ng-click="logout()">Déconnexion</button>
          </li>
          <li class="align-right" ng-show="loggedIn">
              <button ng-click="goProfile()">{{username}}</button>
          </li>
          <li class="align-right" ng-show="isAdmin">
              <button ng-click="goAdmin()">Administration</button>
          </li>
          <li class="align-right" ng-hide="loggedIn">
              <button ng-click="register()" ng-class="{ active: $state.includes('register') }">Inscription</button>
          </li>
          <li class="align-right" ng-hide="loggedIn">
              <button ng-click="login()" ng-class="{ active: $state.includes('login') }">Connexion</button>
          </li>
        </ul>
        </nav>

        <ui-view></ui-view>

      </div>
      <footer>
        <p>Site web développé avec AngularJS et SlimPHP par Antoine Girard Guittard et Victor Levasseur.</p>
      </footer>
    </body>
</html>
